<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Damapp" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bleu</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/design_default_color_primary_dark</item>
        <item name="background">@color/design_default_color_primary_dark</item>

        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your light theme here. -->

    </style>
    <style name="Theme.Damapp" parent="Base.Theme.Damapp">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>
</resources>